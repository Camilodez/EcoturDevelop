<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="camaraVM" type="com.mariajosesapplication.app.modules.camara.data.viewmodel.CamaraVM"/>
    </data>
    <FrameLayout android:id="@+id/frameCamara"
        android:layout_height="match_parent"
        android:layout_width="match_parent" style="@style/groupStylewhite_A700">
        <ImageView android:id="@+id/imageFondoOne"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scaleType="fitXY" imageRes="@{@drawable/img_fondo}"
            tools:ignore="ContentDescription" tools:src="@drawable/img_fondo"/>

        <LinearLayout
            android:id="@+id/linearColumnflashoff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/_16pxv"
            android:paddingEnd="@dimen/_3pxv"
            android:paddingBottom="@dimen/_16pxv">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearRowsquareborder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_15pxh"
                    android:layout_marginEnd="@dimen/_12pxh"
                    android:layout_marginBottom="@dimen/_39pxv"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageImage"
                        android:layout_width="@dimen/_55pxh"
                        android:layout_height="@dimen/_55pxh"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_rectangle_21" />

                    <ImageView
                        android:id="@+id/imageSquareborder"
                        android:layout_width="@dimen/_55pxh"
                        android:layout_height="@dimen/_55pxh"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_117pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_square_border" />

                    <ImageView
                        android:id="@+id/imageSwitchcamera"
                        android:layout_width="@dimen/_55pxh"
                        android:layout_height="@dimen/_55pxh"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_121pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_switch_camera" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearRowflashoffOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_15pxh"
                    android:paddingEnd="@dimen/_15pxh">

                    <ImageView
                        android:id="@+id/imageImagesevenOne"
                        android:layout_width="@dimen/_25pxh"
                        android:layout_height="@dimen/_25pxh"
                        android:layout_marginTop="@dimen/_3pxv"
                        android:layout_marginBottom="@dimen/_7pxv"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_image_7"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_image_7" />

                    <ImageView
                        android:id="@+id/imageFlashoffOne"
                        android:layout_width="@dimen/_35pxh"
                        android:layout_height="@dimen/_35pxh"
                        android:layout_marginStart="@dimen/_334pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_flash_off"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_flash_off" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </FrameLayout>
</layout>
